    "express": "^4.18.2",
    "mongoose": "^8.0.1",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "18.x"
  }
}
