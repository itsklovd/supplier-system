{
  "name": "supplier-system",
  "version": "1.0.0",
  "description": "System profilowania dostawców i zarządzania asortymentem produktowym",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
